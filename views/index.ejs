<%- include('partials/header'); -%>

<body>
  <div class="card">
     <!-- This form shall be used to fetch your city name -->
     <form action="/" method="post"  class="search">
      <input name="city" type="text" placeholder="enter your city name" required/>
      <button type="submit" class="btn">
        <i class="fa fa-search"></i>
      </button>
         </form>

    <!-- Upon fetching of data you will display it -->
    <%if( weather !== null){ %>
     <div  class="city">
      <p class="place">
        <%= place %>
      </p>
      <p class="city">
        <%= weatherTimezone %>
      </p>
    </div>
    <div class="weather">
      <img src="<%= weatherIcon %>" class="weather-icon"></img>
      <p class="description">
        <%= weatherDescription %>
      </p>
      <h1 class="temp">
        <%= weatherTemp %>°C /
            <%= weatherFahrenheit %>°F
      </h1>
    
      <div class="details">
        <div class="col">
          <img src="img/humidity.png" alt="" />
          <div>
            <p class="humidity"><%= weatherHumidity %> %</p>
            <p>Humidity</p>
          </div>
        </div>
        <div class="col">
          <img src="img/wind.png" alt="" />
          <div>
            <p class="wind"><%= weatherWind %> km/h</p>
            <p>Wind Speed</p>
          </div>
        </div>
      </div>
    </div>
    <% } %>

        <% if(error !== null){ %>
        <p>
          <%= error %>
        </p>
        <% } %>
  </div>
